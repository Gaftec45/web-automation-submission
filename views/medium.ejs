<!DOCTYPE html>
<html>
<head>
  <title>Medium Bot Interface</title>
  <style>
    body {
      font-family: sans-serif;
      max-width: 600px;
      margin: 50px auto;
      padding: 0 20px;
      box-sizing: border-box;
    }

    h1 {
      text-align: center;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    label {
      font-weight: bold;
    }

    input, button {
      padding: 10px;
      font-size: 1rem;
      width: 100%;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 5px;
      transition: border-color 0.3s;
    }

    input:focus {
      border-color: #007BFF;
      outline: none;
    }

    button {
      background-color: #007BFF;
      color: white;
      font-weight: bold;
      border: none;
      cursor: pointer;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #0056b3;
    }

    #result {
      margin-top: 20px;
      font-weight: bold;
      min-height: 1.5em;
    }

    @media (max-width: 480px) {
      body {
        margin: 20px auto;
        max-width: 100%;
      }
    }
  </style>
</head>
<body>
  <h1>Start Medium Submission Bot</h1>
  <form id="botForm">
    <label for="sheetsUrl">Google Sheets URL:</label>
    <input type="url" id="sheetsUrl" name="sheetUrl" required />

    <label for="driveUrl">Google Drive Folder URL:</label>
    <input type="url" id="driveUrl" name="driveUrl" required />

    <button type="submit">Start Bot</button>
  </form>

  <div id="result"></div>

  <script>
    const form = document.getElementById('botForm');
    form.addEventListener('submit', async e => {
      e.preventDefault();
      const sheetsUrl = document.getElementById('sheetsUrl').value.trim();
      const driveUrl = document.getElementById('driveUrl').value.trim();

      const response = await fetch('/bot/medium', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ sheetUrl: sheetsUrl, driveUrl })
      });

      const resultText = await response.text();
      document.getElementById('result').textContent = resultText;
    });
  </script>
</body>
</html>